<%= render 'books/template', user:@user %>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag @user.get_profile_image(100, 100) %>
  <% end %>

  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></p>
  <p>ショップ名：<%= book.title %></p>
  <p>説明：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>