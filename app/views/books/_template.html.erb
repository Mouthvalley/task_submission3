<!--部分テンプレート-->
<h1>User info</h1>
<h3><%= user.name %></h3>
 <% if user == current_user %>
  <%= link_to 'edit', edit_user_path(current_user.id) %>
<% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  　<%= f.text_field :title %>

  <h4>Opinion</h4>
  　<%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>