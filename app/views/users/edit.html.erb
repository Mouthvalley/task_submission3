<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@user do |f| %>
  <div for="Name">Name</div>
  <!--placeholder：空白の時に表示される文字-->
  <%= f.text_field :name, autofocus: true, placeholder:"Name"%>

  <div for="Image">Image</div>
  <!--accept: "image/*"：*はイメージファイルの形式関係なく認められる(acceptされる)-->
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <div for="Introdcution">Introdcution</div>
  <%= f.text_field :introduction, autofocus: true, placeholder:"Introdcution"%>

  <%= f.submit "Update User" %>
<% end %>